<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:background="@color/list_item_background_color">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="me.cassiano.listadejanot.PoliticianDetailFragment"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/label_politician_name"
            android:textColor="@color/list_item_text_color"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/picture"
            android:layout_toEndOf="@+id/picture"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/label_politician_party_detail"
            android:textColor="@color/list_item_text_color"
            android:layout_below="@+id/label_politician_name"
            android:layout_alignLeft="@+id/label_politician_name"
            android:layout_alignStart="@+id/label_politician_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/label_politician_status"
            android:textColor="@color/list_item_text_color"
            android:layout_below="@+id/label_politician_party_detail"
            android:layout_alignLeft="@+id/label_politician_party_detail"
            android:layout_alignStart="@+id/label_politician_party_detail" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/picture"
            android:padding="@dimen/list_item_image_view_padding"
            android:contentDescription="@string/list_item_image_view_content_description"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/windowBackgroundColor"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/politician_detail_suspicion"
        android:textColor="@color/list_item_text_color"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/label_politician_suspicion"
        android:textColor="@color/list_item_text_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/politician_detail_defense"
        android:textColor="@color/list_item_text_color"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/label_politician_defense"
        android:textColor="@color/list_item_text_color" />

</LinearLayout>
</ScrollView>