<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/list_item_background_color"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/list_item_image_view_size"
        android:layout_height="@dimen/list_item_image_view_size"
        android:padding="@dimen/list_item_image_view_padding"
        android:contentDescription="@string/list_item_image_view_content_description" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="@dimen/list_item_margin_left"
            android:layout_marginTop="@dimen/list_item_margin_top"
            android:padding="@dimen/list_item_padding"
            android:textColor="@color/list_item_text_color" />
        <TextView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_text_color"
            android:layout_marginLeft="@dimen/list_item_margin_left"/>
    </LinearLayout>
</LinearLayout>