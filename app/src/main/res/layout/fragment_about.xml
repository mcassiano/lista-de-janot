<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_item_padding"
    android:background="@color/list_item_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/app_name"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/list_item_text_color"
            android:layout_marginTop="@dimen/list_item_margin_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/app_version"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/list_item_text_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/app_description"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/list_item_text_color"
            android:padding="@dimen/list_item_padding"
            android:layout_marginLeft="@dimen/list_item_margin_left"
            android:layout_marginRight="@dimen/list_item_margin_left" />

    </LinearLayout>
</ScrollView>