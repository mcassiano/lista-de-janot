<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_background_color">

    <ImageView
        android:layout_width="@dimen/tweet_row_image_view_size"
        android:layout_height="@dimen/tweet_row_image_view_size"
        android:padding="@dimen/list_item_image_view_padding"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:id="@+id/tweet_avatar"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:layout_marginRight="@dimen/list_item_margin_left" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:layout_marginRight="@dimen/list_item_margin_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_text_color"
            android:textStyle="bold"
            android:id="@+id/tweet_username" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_text"
            android:textColor="@color/list_item_text_color"
            android:layout_marginTop="@dimen/list_item_margin_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tweet_date"
            android:textColor="@color/list_item_text_color" />


    </LinearLayout>


</LinearLayout>